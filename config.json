{
    "sites": [
        {
            "name": "Site Tir Sportif Saint Denis en Val",
            "url": "https://tirsportif-saintdenisenval.fr/",
            "interval": "30s",
            "timeout": "10s"
        }
    ],
    "alerts": {
        "email": {
            "enabled": false,
            "smtp_server": "smtp.gmail.com",
            "smtp_port": 587,
            "username": "your-email@gmail.com",
            "password": "your-app-password",
            "from": "Site Monitor <alerts@yoursite.com>",
            "recipients": ["admin@yoursite.com"],
            "use_tls": true
        },
        "webhook": {
            "enabled": false,
            "url": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
            "format": "slack",
            "timeout": "30s",
            "retry_count": 3,
            "headers": {}
        },
        "thresholds": {
            "consecutive_failures": 3,
            "response_time_threshold": "5s",
            "uptime_threshold": 95.0,
            "uptime_window": "24h",
            "performance_window": "1h",
            "alert_cooldown": "5m"
        }
    }
}